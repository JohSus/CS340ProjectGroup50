<!DOCTYPE html>
<html>

<link href="/static/style.css" rel="stylesheet" type="text/css" />
<script language="JavaScript"> </script>

<head>
    <title>Customers' Dietary Restrictions</title>
</head>

<body>
    <h1>Customers' Dietary Restrictions</h1>

    <nav>
    <a href="/">Home</a> | <a href="/orders">Orders</a> | <a href="/customers">Customers</a> | 
    <a href="/dishes">Dishes</a> | <a href="/order_dishes">Order has Dishes</a> | 
    <a href="/ratings">Ratings</a> | <a href="/dietary_restrictions">Dietary Restrictions</a> | 
    <a href="/customers_has_dietary_restrictions">Customer Dietary Restrictions</a>
    </nav>

    <div>
        <table border="1" cellpadding="5">
            <table>
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the
        column name -->
                        {% for key in data[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be
        our header row -->
                        <th>{{ key }}</th>

                        <!-- End of this for loop -->
                        {% endfor %}
                    </tr>
                <tbody>

                    <!-- Now, iterate through every person in bsg_people -->
                    {% for customer_restriction in data %}
                    <tr>
                        <!-- Then iterate through every key in the current person dictionary -->
                        {% for key in customer_restriction.keys() %}

                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{customer_restriction[key]}}</td>
                        {% endfor %}
                        <td><a href="/edit_customers_has_dietary_restrictions/{{customer_restriction.ID}}">Edit</a></td>
                        <td><a href="/delete_customers_has_dietary_restrictions/{{customer_restriction.ID}}">Delete</a></td>
                    </tr>
                    {% endfor %}
            </table>
        </table>
        <p>&nbsp;</p>

    </div> <!-- add -->
    <div id="insert">
        <form action="/customers_has_dietary_restrictions" method="POST" id="add_customers_has_dietary_restrictions">
            <legend><strong>Add Customer Dietary Restriction</strong></legend>
            <fieldset class="fields">
                <label> Customer ID </label>
                <select id="update_customer_id" name="customer_id">
                    <option value="0"> None </option>
                    {% for customer in data2 %}
                    <option value="{{customer.customerID}}">{{customer.customerID}}</option>
                    {% endfor %}
                </select>
                <label> Dietary Restriction ID </label>
                <select id="update_restriction_id" name="restriction_id">
                    <option value="0"> None </option>
                    {% for restriction in data3 %}
                    <option value="{{restriction.restrictionID}}">{{restriction.restrictionID}}</option>
                    {% endfor %}
                </select>
            </fieldset>
            <input class="btn" type="submit" name="add_customers_has_dietary_restrictions" value="Add Customer Restriction">
        </form>
    </div><!-- add -->

    <p>&nbsp;</p>

</body>

</html>